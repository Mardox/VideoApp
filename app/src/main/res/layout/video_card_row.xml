<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom|left"
        android:background="@drawable/video_card_row">

        <!--android:background="@drawable/title_background"-->


        <!--<TextView-->
            <!--android:id="@+id/sponsored"-->
            <!--android:visibility="gone"-->
            <!--android:text="@string/sponsored"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textSize="15sp"-->
            <!--android:textColor="@color/text_grey"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_marginTop="0dp"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:layout_marginBottom="5dp"/>-->

        <ImageView
            android:id="@+id/list_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:background="@android:color/darker_gray"/>


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:background="@drawable/gradient_reverse"
            android:layout_height="80dp"
            android:maxLines="2"
            android:scrollHorizontally="false"
            android:textSize="22dp"
            android:textColor="@color/card_white"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingBottom="20dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:layout_alignTop="@id/list_image"/>


        <TextView
            android:id="@+id/views"
            android:text="123,445,555 Views"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#80ffffff"
            android:textSize="20dp"
            android:textColor="#ff184355"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="left"
            android:layout_alignBottom="@id/list_image"
            />



        <TextView
            android:id="@+id/duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="right"
            android:layout_alignBottom="@id/list_image"
            />

    </RelativeLayout>

</FrameLayout>